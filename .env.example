# Example environment variables for webhook-gateway
# Copy to .env and fill real values before running the app

# Database connection used by Prisma. Example for SQLite:
# For local development use: file:./dev.db
# For production use a proper DB URL (Postgres, MySQL, etc.).
DATABASE_URL="file:./dev.db"

# Secret used by the built-in `test` webhook provider for signing/verification
# Keep this secret safe in CI/production. Example value for local testing:
TEST_WEBHOOK_SECRET="change-me"

# Set to 'true' to silence logs (used in tests). Default in CI/tests is 'true'.
TEST_SILENCE_LOGS="false"